{
  "ConnectionStrings": {
    "DefaultConnection": "Host=chamba_users_jobs_db;Port=4040;Database=chamba_users_jobs_db;Username=root;Password=root;Include Error Detail=true"
  },

  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://chamba_seq:5341" }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },

  "Keycloak": {
    "AuthorizationUrl": "http://localhost:18080/realms/chamba-auth/protocol/openid-connect/auth"
  },

  "Authentication": {
    "MetadataAddress": "http://keycloak:8080/realms/chamba-auth/.well-known/openid-configuration",
    "ValidIssuer": "http://localhost:18080/realms/chamba-auth",
    "Audience": "account"
  },

  "Redis": {
    "ConnectionString": "redis_container:6379",
    "DefaultCacheDuration": 60
  }
}
